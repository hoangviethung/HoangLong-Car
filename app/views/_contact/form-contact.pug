								input.form-control(type="text" placeholder="Ví dụ: 0969912404")
							.form-group.col-md-12
								label Nhập lời nhắn của bạn
								textarea.form-control(placeholder="Nhập lời nhắn của bạn")
							.form-group.col-md-12
