block let
	- cars = {30: 'Toyota', 10: 'Land Rover', 12: 'Lexus', 32: 'BMW'};
	- categories = {30: 'Hệ thống DVD', 10: 'Film cách nhiệt', 12: 'Camera hành trình', 32: 'Ghế nệm da', 44: 'Combo'};
	- types = {1: 'Đang giảm giá', 2: 'Sản phẩm nổi bật', 3: 'Sản phẩm có quà tặng'}
aside.aside-menu-products
	.filter-wrapper
		.filter-block
			h2 Danh mục
			ul
				each val,key in categories
					li
						a.lcl.lcl-1(href="products.html")
							span #{val}
							span (#{key})
		.filter-block
			h2 Trạng thái
			ul
				each val,key in types
					li
						.form-group.checkbox__group
							label
								.checkbox__custom
									input(type="radio" name="filter" data-url="products-filter.html")
								span #{val}
								span (#{key})
		.filter-block
			h2 Loại xe
			ul
				each val,key in cars
					li
						.form-group.checkbox__group
							label
								.checkbox__custom
									input(type="radio" name="filter" data-url="products-filter.html")
								span #{val}
								span (#{key})
	.fiiter-submit
		.btn.color-dark.btn-large.btn-close Xác nhận