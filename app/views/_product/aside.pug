-let cars = {30: 'Toyota', 10: 'Land Rover', 12: 'Lexus', 32: 'BMW'};
-let categories = {30: 'Hệ thống DVD', 10: 'Film cách nhiệt', 12: 'Camera hành trình', 32: 'Ghế nệm da'};
-let hotproducts = {1: 'Đầu DVD Sony', 2: 'Đầu DVD Sam Sung', 3: 'Camera Hoàng Long'};
aside.aside-menu-products
	.filter-block
		h2 Danh mục phụ kiện
		ul.categories
			each val,key in categories
				li.category-item
					a.lcl.lcl-1(href="products.html")
						span #{val}
						span (#{key})
	.filter-block
		h2 Sản phẩm bán chạy
		ul.products__hot
			each val,key in hotproducts
				li
					a.product-item__hot(href="product-detial.html")
						.img
							img.lazyload.blur-up.object-cover.object-resize(src=`./images/products/product_hoanglongcar_0${key}.jpg`, alt="SAN-PHAM-NOI-BAT-HOANGLONGCAR")
						.informarion
							h3.lcl.lcl-1 #{val}
							h4 10.000.000
								san VNĐ
							del 10.000.000
								san VNĐ
	.filter-block
		h2 Danh mục theo loại xe
		ul.cars
			each val,key in cars
				li.car-item
					.form-group.checkbox__group
						label
							.checkbox__custom
								input(type="checkbox")
							span #{val}
							span (#{key})