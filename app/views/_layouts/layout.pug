<!DOCTYPE html>
html(lang="en")
	head
		// *** META *** //
		include meta
		// *** CSS *** //
		include css
		// *** FAVICON *** //
		link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
		// *** TITLE *** //
		title #{pageTitle}
	body
		// *** HEADER *** //
		block header
			include header
		// *** MAIN *** //
		main
			block main
			// *** PAGE NAME *** //
			#page-verify(data-class=`${bodyClass}`)
		// *** FACEBOOK *** //
		#fb-root
		// *** OVERLAY *** //
		#overlay
		// *** FOOTER *** //
		block footer
			include footer
		// *** JS *** //
		include js
		// *** FACEBOOK  *** //
		script.
			window.fbAsyncInit = function() {
			FB.init({
			xfbml            : true,
			version          : 'v9.0'
			});
			};
			(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = 'https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js';
			fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		// Your Chat Plugin code
		.fb-customerchat(attribution='setup_tool' page_id='102260248406169' theme_color='#ffc513')