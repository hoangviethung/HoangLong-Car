extends views/_layouts/layout

block var
	- bodyClass = "news-detail-page"
	- pageTitle = "Hoàng Long Car | TOP 5 THƯƠNG HIỆU DVD ANDOIRD"
	- pageBanner = "./images/page-banner/products_hoanglongcar.jpg"
	- breadcrumb = {1:'Trang chủ', 2:'Tin tức', 3:'Tin tức chi tiết'};
	- namePage = "TOP 5 THƯƠNG HIỆU DVD ANDOIRD"
block main
	// PAGE BANNERs
	include ./views/_components/page-banner
	section.news-detail.pd-section
		.container
			.row
				.col-lg-8.col-md-7
					// NEWS DETAIL
					include ./views/_news/detail
					include ./views/_news/share
				.col-lg-4.col-md-5
					include ./views/_news/aside